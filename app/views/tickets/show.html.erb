<%- model_class = Ticket -%>
<%- title "Билет №#{@ticket.id}" %>

<dl class="dl-horizontal">
  <dt><strong>Салон:</strong></dt>
  <dd><%= @ticket.salon %></dd>
  <dt><strong>Место:</strong></dt>
  <dd><%= @ticket.seat %></dd>
  <dt><strong>Пассажир:</strong></dt>
  <dd><%= link_to @ticket.passenger.full_name, @ticket.passenger %></dd>
  <dt><strong>Рейс:</strong></dt>
  <dd><%= link_to "№#{@flight.id}", @ticket.flight %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              flight_tickets_path(@flight), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_flight_ticket_path(@flight, @ticket), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              flight_ticket_path(@flight, @ticket),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
