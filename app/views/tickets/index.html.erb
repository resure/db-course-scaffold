<%- model_class = Ticket -%>

<%- title "Билеты рейса №#{@flight.id}" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Пассажир</th>
      <th>Салон</th>
      <th>Место</th>
      <th>Дата добавления</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= link_to ticket.id, flight_ticket_path(@flight, ticket) %></td>
        <td><%= link_to ticket.passenger.full_name, ticket.passenger %></td>
        <td><%= ticket.salon %></td>
        <td><%= ticket.seat %></td>
        <td><%= ticket.created_at.strftime('%d.%m.%y at %k:%M') %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_flight_ticket_path(@flight, ticket), :class => 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_flight_ticket_path(@flight),
            :class => 'btn btn-primary' %>
