<%- model_class = Flight -%>
<% title "Рейс №#{@flight.id}" %>

<dl class="dl-horizontal">
  <dt><strong>Отправление:</strong></dt>
  <dd><%= @flight.departure.strftime('%d.%m.%y at %k:%M') %> (<%= link_to @flight.departure_airport.name, @flight.departure_airport %>)</dd>
  <dt><strong>Прибытие:</strong></dt>
  <dd><%= @flight.arrival.strftime('%d.%m.%y at %k:%M') %> (<%= link_to @flight.arrival_airport.name, @flight.arrival_airport %>)</dd>
  <dt><strong>Компания:</strong></dt>
  <dd><%= link_to @flight.airline.name, @flight.airline %></dd>
  <dt><strong>Самолет:</strong></dt>
  <dd><%= link_to @flight.airplane_model.name, @flight.airplane_model %></dd>
  <dt><strong>Билеты:</strong></dt>
  <dd><%= link_to 'Список', flight_tickets_path(@flight) %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              flights_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_flight_path(@flight), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              flight_path(@flight),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
