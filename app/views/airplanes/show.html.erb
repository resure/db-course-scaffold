<%- model_class = Airplane -%>
<%- title "Самолет #{@airplane.airplane_model.name} компании #{@airline.name}" %>

<dl class="dl-horizontal">
  <dt><strong>Модель:</strong></dt>
  <dd><%= link_to @airplane.airplane_model.name, @airplane.airplane_model %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              airline_airplanes_path(@airline), :class => 'btn btn-mini'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_airline_airplane_path(@airline, @airplane), :class => 'btn btn-mini' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              airline_airplane_path(@airline, @airplane),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger btn-mini' %>
</div>
