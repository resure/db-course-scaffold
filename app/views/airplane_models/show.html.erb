<%- model_class = AirplaneModel -%>
<%- title @airplane_model.name %>


<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @airplane_model.name %></dd>
  <dt><strong>Вместимость: </strong></dt>
  <dd><%= @airplane_model.capacity %></dd>
</dl>

<div class='airplane-image'>
  <img src='/assets/<%= @airplane_model.image %>' alt='' />
</div>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              airplane_models_path, :class => 'btn btn-mini'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_airplane_model_path(@airplane_model), :class => 'btn btn-mini' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              airplane_model_path(@airplane_model),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger btn-mini' %>
</div>
