<%- model_class = Passenger -%>
<%- title "Пассажир №#{@passenger.id}" %>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:full_name) %>:</strong></dt>
  <dd><%= @passenger.full_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:passport_data) %>:</strong></dt>
  <dd><%= @passenger.passport_data %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              passengers_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_passenger_path(@passenger), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              passenger_path(@passenger),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
